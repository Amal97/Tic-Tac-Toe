import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Game {
	private static String board[][] = new String [3][3];
	
	private static void initiliseBoard() {
		for(int i = 0; i < 3; i++) {
			for(int j = 0; j < 3; j++) {
				board[i][j] = ".";
			}
		}
	}
	
	private static void boardPrinter() {
		for(int i = 0; i < 3; i++) {
			for(int j = 0; j < 3; j++) {
				System.out.print(board[i][j]);
			}
			System.out.println("");
		}
	}
	
	private static boolean processPlayersMove(int x, int y, int player) {
		boolean nextMove = false;
		if(board[x][y].equals(".")) {
			if(player == 1) {
				board[x][y] = "X";
			}
			else {
				board[x][y] = "O";
			}
			nextMove = true;
		}
		else {
			System.out.println("Oh no, a piece is already at this place! Try again...");
		}
		return nextMove;
	}
	
	private static int changePlayer(int player) {
		if(player == 1) {
			player = 2;
		}
		else {
			player = 1;
		}
		return player;
	}
	
	private static boolean checkHorizontal() {
		for(int i = 0; i < 3; i++) {
			if((board[i][0] == "X") && (board[i][1] == "X") && (board[i][2] == "X")) {
				return true;
			}
			else if((board[i][0] == "Y") && (board[i][1] == "Y") && (board[i][2] == "Y")) {
				return true;
			}
		}
		return false;
	}
	
	private static boolean checkVertical() {
		for(int i = 0; i < 3; i++) {
			if((board[0][i] == "X") && (board[1][i] == "X") && (board[2][i] == "X")) {
				return true;
			}
			else if((board[0][i] == "Y") && (board[1][i] == "Y") && (board[2][i] == "Y")) {
				return true;
			}
		}
		return false;
	}
	
	private static boolean checkWinner() {
		if( (checkHorizontal()) || (checkVertical())) {
			return true;
		}
		return false;
	}
	
	public static void main(String[] args) {
		BufferedReader inFromUser = new BufferedReader(new InputStreamReader(System.in));
		String userInput = "";
		int x = -1;
		int y = -1;
		int player = 1;
		boolean playing = true;
		boolean nextMove = false;
		
		initiliseBoard();
		
		while(playing) {
			boardPrinter();
			System.out.println("Player "+player+"'s turn :");
			try {
				userInput = inFromUser.readLine();
				if(userInput.equalsIgnoreCase("q")) {
					playing = false;
				}
				else {
					x = Integer.parseInt(userInput.substring(0,1));
					y = Integer.parseInt(userInput.substring(2,3));
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
			
			
			nextMove = processPlayersMove(x,y,player);
			checkWinner();
			
			if(nextMove) {
				player = changePlayer(player);
			}
		}
	}	
}
